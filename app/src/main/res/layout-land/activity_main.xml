<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button_negative"
        android:layout_width="55dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:backgroundTint="#818493"
        android:text="Neg"
        android:textAlignment="center"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/button_divide"
        app:layout_constraintTop_toTopOf="@+id/button_divide" />

    <EditText
        android:id="@+id/result_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:autofillHints=""
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:hint=""
        android:inputType="numberSigned|numberDecimal"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.176"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <EditText
        android:id="@+id/newNumber_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:autofillHints=""
        android:ems="10"
        android:hint=""
        android:inputType="numberSigned|numberDecimal"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="@+id/result_et"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/result_et"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/operation_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@id/newNumber_et"
        app:layout_constraintEnd_toStartOf="@+id/newNumber_et"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="operation" />

    <Button
        android:id="@+id/button_zero"
        android:layout_width="55dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#818493"
        android:text="0"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/button_one"
        app:layout_constraintTop_toBottomOf="@+id/button_one" />

    <Button
        android:id="@+id/button_one"
        android:layout_width="55dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#818493"
        android:text="1"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/button_four"
        app:layout_constraintTop_toBottomOf="@+id/button_four" />

    <Button
        android:id="@+id/button_two"
        android:layout_width="55dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:backgroundTint="#818493"
        android:text="2"
        android:textSize="16sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button_one"
        app:layout_constraintStart_toEndOf="@+id/button_one" />

    <Button
        android:id="@+id/button_three"
        android:layout_width="55dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:backgroundTint="#818493"
        android:text="3"
        android:textSize="16sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button_two"
        app:layout_constraintStart_toEndOf="@+id/button_two" />

    <Button
        android:id="@+id/button_four"
        android:layout_width="55dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#818493"
        android:text="4"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/button_seven"
        app:layout_constraintTop_toBottomOf="@+id/button_seven" />

    <Button
        android:id="@+id/button_five"
        android:layout_width="55dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:backgroundTint="#818493"
        android:text="5"
        android:textSize="16sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button_four"
        app:layout_constraintStart_toEndOf="@+id/button_four" />

    <Button
        android:id="@+id/button_six"
        android:layout_width="55dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:backgroundTint="#818493"
        android:text="6"
        android:textSize="16sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button_five"
        app:layout_constraintStart_toEndOf="@+id/button_five" />

    <Button
        android:id="@+id/button_seven"
        android:layout_width="55dp"
        android:layout_height="50dp"
        android:layout_marginStart="80dp"
        android:backgroundTint="#818493"
        android:text="7"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/result_et"
        app:layout_constraintTop_toTopOf="@+id/result_et" />

    <Button
        android:id="@+id/button_eight"
        android:layout_width="55dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:backgroundTint="#818493"
        android:text="8"
        android:textSize="16sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button_seven"
        app:layout_constraintStart_toEndOf="@+id/button_seven" />

    <Button
        android:id="@+id/button_nine"
        android:layout_width="55dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:backgroundTint="#818493"
        android:text="9"
        android:textSize="16sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button_eight"
        app:layout_constraintStart_toEndOf="@+id/button_eight" />

    <Button
        android:id="@+id/button_divide"
        android:layout_width="55dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:backgroundTint="#818493"
        android:text="/"
        android:textSize="16sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button_nine"
        app:layout_constraintStart_toEndOf="@+id/button_nine" />

    <Button
        android:id="@+id/button_multiply"
        android:layout_width="55dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:backgroundTint="#818493"
        android:text="*"
        android:textSize="16sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button_six"
        app:layout_constraintStart_toEndOf="@+id/button_six" />

    <Button
        android:id="@+id/button_decimal"
        android:layout_width="55dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:backgroundTint="#818493"
        android:text="."
        android:textSize="16sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button_zero"
        app:layout_constraintStart_toEndOf="@+id/button_zero" />

    <Button
        android:id="@+id/button_plus"
        android:layout_width="55dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:backgroundTint="#818493"
        android:text="+"
        android:textSize="16sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button_equals"
        app:layout_constraintStart_toEndOf="@+id/button_equals" />

    <Button
        android:id="@+id/button_minus"
        android:layout_width="55dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:backgroundTint="#818493"
        android:text="-"
        android:textSize="16sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button_three"
        app:layout_constraintStart_toEndOf="@+id/button_three" />

    <Button
        android:id="@+id/button_equals"
        android:layout_width="55dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:backgroundTint="#818493"
        android:text="="
        android:textSize="16sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button_decimal"
        app:layout_constraintStart_toEndOf="@+id/button_decimal" />


</androidx.constraintlayout.widget.ConstraintLayout>